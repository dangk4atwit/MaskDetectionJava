<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".profileEdit">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/edit_confirm_btn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            android:text="Confirm"/>

        <Button
            android:id="@+id/edit_cancel_btn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="30dp"
            android:text="Cancel"/>

        <TextView
            android:id="@+id/Maintitle"
            android:layout_width="415dp"
            android:layout_height="46dp"
            android:text="Profile"
            android:textAlignment="center"
            android:textSize="35sp"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/profile_IV"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Maintitle"
            tools:src="@drawable/ic_baseline_person_24"
            android:layout_marginTop="30dp"/>


        <TextView
            android:id="@+id/name_input_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bob Daniels"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/profile_IV"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="-75dp"/>

        <TextView
            android:id="@+id/department_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Department:"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@+id/name_TV"
            app:layout_constraintTop_toTopOf="@id/department_input_ET"
            app:layout_constraintBottom_toBottomOf="@id/department_input_ET"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/department_input_ET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Information Technolgy"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@id/name_input_TV"
            app:layout_constraintStart_toStartOf="@id/name_input_TV"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/gender_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender:"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="@id/name_TV"
            app:layout_constraintTop_toTopOf="@id/gender_input_Spinner"
            app:layout_constraintBottom_toBottomOf="@id/gender_input_Spinner"
            android:layout_marginTop="10dp"/>

        <Spinner
            android:id="@+id/gender_input_Spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/department_input_ET"
            app:layout_constraintTop_toBottomOf="@id/department_input_ET"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/name_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name:"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/profile_IV"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/job_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Job Title:"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="@id/job_input_ET"
            app:layout_constraintBottom_toBottomOf="@id/job_input_ET"
            app:layout_constraintEnd_toEndOf="@id/name_TV" />

        <EditText
            android:id="@+id/job_input_ET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Information Technician"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="@id/gender_input_Spinner"
            app:layout_constraintTop_toBottomOf="@id/gender_input_Spinner"
            android:layout_marginTop="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>